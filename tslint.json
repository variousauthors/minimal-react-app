{
  "rules": {
    "class-name": true,
    "indent": [true, "spaces", 2],
    "one-line": [true,
      "check-open-brace",
      "check-whitespace"
    ],
    "no-var-keyword": true,
    "quotemark": [true,
        "single",
        "avoid-escape"
    ],
    "semicolon": [true,
        "never"
    ],
    "whitespace": [true,
        "check-branch",
        "check-decl",
        "check-operator",
        "check-module",
        "check-separator",
        "check-type"
    ],
    "no-trailing-whitespace": true,
    "no-inferrable-types": true,
    "prefer-const": true,
    "comment-format": false,
    "no-duplicate-variable": true,
    "no-conditional-assignment": true,
    "no-console": [true, "log", "error"],
    "no-debugger": true,
    "no-empty": true,
    "no-eval": true,
    "no-any": true,
    "restrict-plus-operands": true,
    "strict-boolean-expressions": [
      true,
      "allow-undefined-union",
      "allow-boolean-or-undefined"
    ],
    "switch-default": true,
    "triple-equals": true,
    "no-object-literal-type-assertion": true,
    "use-isnan": true,
    "arrow-return-shorthand": true,
    "encoding": true,
    "import-spacing": true,
    "interface-name": [true, "always-prefix"],
    "new-parens": true,
    "no-boolean-literal-compare": false,
    "no-unnecessary-callback-wrapper": true,
    "no-unused-variable": true,
    "number-literal-format": true,
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"],
    "ban": [
      true,
      { "name": "dangerouslyMergeProps", "message": "This function is not type safe and should only be used in HOCs" },
      { "name": ["R", "path"], "message": "This function is not type safe; see common/helpers/safeNavigation"},
      { "name": "dangerouslyInitializeApolloClient", "message": "This function mutates global state and should not be used."},
      { "name": "dangerouslyInvokeChangeHandler", "message": "This function casts its argument to any and should not be used."}
    ]
  }
}
